<%@ jet 
package="com.skyway.integration.jsf" 
class="NestedCrudEditTemplate" 
%>
<%@taglib prefix="jet" id="org.eclipse.jet.controlTags"%>  
<%@taglib prefix="f" id="org.eclipse.jet.formatTags"%>
<%@taglib prefix="sw" id="org.skyway.integration.java.skywayCodeGenTags"%>
<%@taglib prefix="gen" id="com.skyway.scaffolding.crud.common.generationTags"%>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.prime.com.tr/ui"
	template="/WEB-INF/jsf/template.xhtml">

	<ui:define name="content">
		<h:form prependId="false">
			<p:commandButton image="back" ajax="false" immediate="true" style="margin-right:20px;" value="#{<jet:get select="lower-case($dataType/@name)"/>msgs['navigation.back']}" action="/jsf/<jet:get select="lower-case($dataType/@name)"/>/view<jet:get select="$dataType/@name"/>.xhtml"/>
		
			<p:panel header="#{<jet:get select="lower-case($dataType/@name)"/>msgs['<jet:get select="lower-case($relatedType/@name)"/>.title']} Details" style="margin-top:10px">
				<p:messages />
				<h:panelGrid id="detail" columns="2" styleClass="grid" columnClasses="label,value">
					<jet:setVariable select="concat($dataType/@name, 'Component.', lower-case($relationship/@name))" var="currentDataTypeName" />
					<jet:iterate select="$relatedType/fields" var="field">
					<gen:isFieldDisplayable select="$field" var="displayable" />
					<jet:if test="$displayable" >
					<h:outputText value="#{<jet:get select="lower-case($dataType/@name)"/>msgs['<jet:get select="lower-case($relatedType/@name)"/>.<jet:get select="lower-case($field/@name)" />.title']}:<jet:if test="string($field/@primaryKey) = 'true'" >*</jet:if>" />
						<jet:choose>
							<jet:when test="string($field/@primaryKey) = 'true'">
						<jet:include template="templates/jsf/crud/common/crudViewField.jet" />
							</jet:when>
							<jet:otherwise>
						<jet:include template="templates/jsf/crud/common/crudEditField.jet" />
							</jet:otherwise>
						</jet:choose>
					</jet:if>
				</jet:iterate>
         			<h:panelGroup>
         				<p:commandButton image="save" ajax="false" style="margin-right:20px;" value="#{<jet:get select="lower-case($dataType/@name)"/>msgs['navigation.save']}" action="#{<jet:get select="$dataType/@name"/>Component.save<jet:get select="$dataType/@name"/><jet:get select="uppercaseFirst($relationship/@name)"/>(<jet:setVariable select="0" var="keyCount" /><jet:iterate select="$dataType/fields" var="field" ><jet:if test="$field/@primaryKey = 'true'"><jet:if test="$keyCount > 0">, </jet:if><jet:get select="$dataType/@name"/>Component.<jet:get select="lower-case($dataType/@name)"/>.<jet:get select="$field/@name" /><jet:setVariable select="$keyCount+1" var="keyCount" /></jet:if></jet:iterate>, <jet:get select="$dataType/@name"/>Component.<jet:get select="lower-case($relationship/@name)"/>)}"/>
         			</h:panelGroup>
				</h:panelGrid>
			</p:panel>

		</h:form>
	</ui:define>
</ui:composition>